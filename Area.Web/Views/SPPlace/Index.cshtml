@model IEnumerable<Area.Data.SupervisorVisitPlace>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span12">
    <div class="widget widget-table action-table">
        <div class="widget-header">
            <i class="icon-th-list"></i>
            <h3>Ziyaret Edilecek Mekanlar</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th> Mekan Adı </th>
                        <th> Adresi </th>
                        <th class="td-actions"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Place.Name) </td>
                            <td>@Html.DisplayFor(modelItem => item.Place.Address) </td>
                            <td class="td-actions"><a href="/spplace/detail/@item.ID" class="btn btn-small btn-success">Mekana Git <i class="btn-icon-only icon-circle-arrow-right">  </i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /widget-content -->
    </div>
</div>



