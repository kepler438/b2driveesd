<form>
    <div class="span12">
        <div class="info-box">
            <div class="row-fluid">
                <div class="span2 rightempty">
                    <h5>Başlangıç Tarihi</h5>
                    <div class="container">
                        <div style="position: relative;width:0px;">
                            <input type="text" name="startdate" class="form-control" id="datetimepicker1" />
                        </div>
                    </div>
                </div>
                <div class="span2 rightempty">
                    <h5>Bitiş Tarihi</h5>
                    <div class="container">
                        <div style="position: relative;width:0px;">
                            <input type="text" name="enddate" class="form-control" id="datetimepicker2" />
