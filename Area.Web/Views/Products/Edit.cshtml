@model Area.Data.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="span12">
        <div class="widget ">
            <div class="widget-header">
                <i class="icon-user"></i>
                <h3>Güncelle - @Html.DisplayFor(model => model.Name)</h3>
            </div>
            <div class="widget-content">
                <div class="tabbable">
                    <div class="tab-content">
                        <div class="tab-pane active" id="formcontrols">
                           @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { @id = "edit-profile", @class = "form-horizontal" }))
                           {
                            <fieldset>
                                <div class="control-group">
                                    <label class="control-label" for="quantity">Alt Kategorisi</label>
                                    <div class="controls">
                                        @Html.DropDownList("SubCategoryID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Adı</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Cl Değeri</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.CLValue, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="note">Durumu</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.IsActive)
                                    </div>
                                </div>
                                @Html.ActionLink("Listeye Geri Dön", "Index")
                                <button type="submit" class="btn btn-primary pull-right two">Güncelle</button>
                            </fieldset>
                           }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 