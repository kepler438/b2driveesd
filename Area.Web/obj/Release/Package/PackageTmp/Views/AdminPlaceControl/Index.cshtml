@model IEnumerable<Area.Data.VisitPlace>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span12">
    <div class="widget widget-table action-table">
        <div class="widget-header"> 
            <i class="icon-th-list"></i>
            <h3>Personel Onaylanmamış Noktalar</h3> 
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                           Mekan Adı
                        </th>
                        <th>
                            Başlangıç Tarihi
                        </th>
                        <th>
                            Bitiş Tarihi
                        </th>
                        <th>
                            Nokta Görevlisi
                        </th>
                        <th class="td-actions"> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(p=>p.IsApproved == false).OrderByDescending(p=>p.StartDate))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Place.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)  @Html.DisplayFor(modelItem => item.User.LastName)
                            </td>

                            <td>
                                <a href="@(Url.Action("GotoPlace/" + item.ID))" target="_blank">Noktaya Git</a>
                                |
                                <a href="#myModal@(item.ID)" data-toggle="modal">Onayla</a>
                                <div id="myModal@(item.ID)" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        <h3 id="myModalLabel">Onaylama Ekranı</h3>
                                    </div>
                                    <div class="modal-body">
                                        <p>Onaylamak istediğinize emin misiniz?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                                        @Html.ActionLink("Eminim Onayla", "ApprovedVisit/" + item.ID)
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
