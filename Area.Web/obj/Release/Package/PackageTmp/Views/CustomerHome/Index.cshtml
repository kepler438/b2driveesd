</div>

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-star"></i>
            <h3>Yeni Hafta İstenilen Ürün Sarf ve Adetleri</h3>
        </div>
        <div class="widget-content ">
            <div class="pointContainer"></div>
        </div>
    </div>
</div>

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-star"></i>
            <h3>Mekan Stok Raporu</h3>
        </div>
        <div class="widget-content ">
            <canvas id="canvasPlaceStock"></canvas>
        </div>
    </div>
</div>

<script>

    $(function () {
        $('#datetimepicker1').datetimepicker({
            locale: 'tr'
        });

        $('#datetimepicker2').datetimepicker({
            locale: 'tr'
        });
    });



    var configchart = {
        type: 'pie',
        data: {
            datasets: [{
                data: [
                    18,
                    39,
                    7,
                ],
                backgroundColor: [
                    window.chartColors.red,
                    window.chartColors.yellow,
                    window.chartColors.blue
                ],
                label: 'Dataset 1'
            }],
            labels: [
                "İzmir",
                "İstanbul",
                "Adana"
            ]
        },
        options: {
            responsive: true
        }
    };

    var configchartpastvisit = {
        type: 'pie',
        data: {
            datasets: [{
                data: [
                    21,
                    39,
                    1,
                    5
                ],
                backgroundColor: [
                    window.chartColors.red,
                    window.chartColors.yellow,
                    window.chartColors.blue,
                    window.chartColors.orange
                ],
                label: 'Dataset 1'
            }],
            labels: [
                "TR Ailesi",
                "YR Ailesi",
                "AR Ailesi",
                "KR Ailesi"
            ]
        },
        options: {
            responsive: true
        }
    };

    function createConfig(pointStyle) {
        return {
            type: 'line',
            data: {
                labels: ["YR", "YRYS", "YRALA", "YRUK", "TR", "TRTS", "TRAS", "TRKA", "N10", "KR", "AR"],
                datasets: [{
                    label: "Adet",
                    backgroundColor: window.chartColors.red,
                    borderColor: window.chartColors.red,
                    data: [3, 2, 1, 1, 2, 2, 1, 1, 0, 0, 0],
                    fill: false,
                    pointRadius: 10,
                    pointHoverRadius: 15,
                    showLine: true
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: false,
                    text: 'Sarf Adetleri '
                },
                legend: {
                    display: false
                },
                elements: {
                    point: {
                        pointStyle: pointStyle
                    }
                }
            }
        };
    }

    var color = Chart.helpers.color;
    var barChartData = {
        labels: ["YR", "YRYS", "YRALA", "YRUK", "TR", "TRTS", "TRAS", "TRKA", "N10", "KR", "AR"],
        datasets: [{
            label: 'Ürünler',
            backgroundColor: color(window.chartColors.blue).alpha(0.5).rgbString(),
            borderColor: window.chartColors.blue,
            borderWidth: 1,
            data: [
                320,
                272,
                122,
                21,
                29,
                22,
                10,
                13,
                3,
                56,
                22
            ]
        }]

    };


    window.onload = function () {
        var container = document.querySelector('.pointContainer');
        [
            'circle'
        ].forEach(function (pointStyle) {
            var div = document.createElement('div');
            div.classList.add('chart-container');
            var canvas = document.createElement('canvas');
            div.appendChild(canvas);
            container.appendChild(div);
            var ctx = canvas.getContext('2d');
            var config = createConfig(pointStyle);
            new Chart(ctx, config);

            //NOTE:Chart Pie
            var ctxchart = document.getElementById("chart-area").getContext("2d");
            window.myPie = new Chart(ctxchart, configchart);

            //NOTE:Geçmiş Mekan Sayısı
            var ctxchartpastvisit = document.getElementById("chart-area-past-visit-count").getContext("2d");
            window.myPie = new Chart(ctxchartpastvisit, configchartpastvisit);

            var ctxpastvisit = document.getElementById("canvasPlaceStock").getContext("2d");
            window.myBar = new Chart(ctxpastvisit, {
                type: 'bar',
                data: barChartData,
                options: {
                    responsive: true,
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: false,
                        text: ''
                    }
                }
            });

        });


    };


</script>
