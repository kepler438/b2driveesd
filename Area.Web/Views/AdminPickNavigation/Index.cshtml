@model IEnumerable<Area.Data.VisitPlace>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span12">

    <div class="widget widget-table action-table">
        <div class="widget-header">

            <i class="icon-th-list"></i>
            <h3>Personel Noktaları</h3>
            <p class="pull-right" style="margin-top:10px;margin-right:10px">
                @Html.ActionLink("Yeni Nokta Oluştur", "Create")
            </p>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Adı
                        </th>
                        <th>
                            Oluşturma Tarihi
                        </th>
                        <th>
                            Bitiş Tarihi
                        </th>
                        <th>
                            Mekan Adı
                        </th>
                        <th class="td-actions"> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>   
                            <td>
                                @Html.DisplayFor(modelItem => item.Region.Name)
                            </td>

                            <td>
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }) |
                                <a href="#myModal@(item.ID)" data-toggle="modal">Sil</a>
                                <div id="myModal@(item.ID)" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        <h3 id="myModalLabel">Silinecek</h3>
                                    </div>
                                    <div class="modal-body">
                                        <div class="control-group">
                                            <label class="control-label" for="note">İptal sebebi</label>
                                            <div class="controls">
                                                <textarea name="note" class="span4"></textarea>
                                            </div>
                                        </div>
                                        <p>Silmek istediğinize emin misiniz?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                                        @Html.ActionLink("Eminim Sil", "DeleteConfirmed/" + item.ID)
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


