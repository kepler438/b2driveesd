@model Area.Data.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="myContainer">
    <h2>Sil</h2>

    <h3>Silmek istediğinize emin misiniz?</h3>
    <div>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Adı:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Kategorisi:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductSubCategory.ProductCategory.Name)
            </dd>

            <dt>
                Alt Kategorisi:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductSubCategory.Name)
            </dd>
            <dt>
                Oluşturma Tarihi:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt>
                Durumu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-default" /> |
                @Html.ActionLink("Listeye Geri Dön", "Index")
            </div>
        }
    </div>
</div>