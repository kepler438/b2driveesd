@model IEnumerable<Area.Data.VisitPlaceWareHouse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span12">
    <div class="widget widget-table action-table">
        <div class="widget-header">
            <i class="icon-th-list"></i>
            <h3>Depolar</h3>
        </div>
        <!-- /widget-header -->
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="sidebyside">
                        <a href="/spcarinfo/@Url.RequestContext.RouteData.Values["id"]" class="btn btn-small btn-warning one pull-left"><i class="btn-icon-only icon-circle-arrow-left"> Geri Gel </i></a>
                        <a href="/spplace/@Url.RequestContext.RouteData.Values["id"]" class="btn btn-small btn-success two pull-right">Sonraki Adım<i class="btn-icon-only icon-circle-arrow-right">  </i></a>
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th> Depo Adı </th>
                                <th> Adresi </th>
                                <th class="td-actions"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.WareHouse.Name) </td>
                                    <td>@Html.DisplayFor(modelItem => item.WareHouse.Address) </td>
                                    <td class="td-actions"><a href="/warehouse/detail/@item.ID" class="btn btn-small btn-success">Depoya Git <i class="btn-icon-only icon-circle-arrow-right">  </i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- /widget-content -->
    </div>
</div>
